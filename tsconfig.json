{
    "compilerOptions": {
        "outDir": "dist/js", //caminho de onde vão ser criados os arquivos de Ts para Js.
        "target": "ES6", // Versão do EcmaScript que vamos utilizar.
        "noEmitOnError": true, //faz com que a pasta JS não seja criada no projeto principal.
        "noImplicitAny": true
    },
    "include": ["app/**/*"] //pasta de arquivos TypeScript.
}